{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true
    },
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "extends": [
    "eslint:recommended",
    "prettier", // ALWAYS LAST: disable style rules that conflict with prettier
    "plugin:cypress/recommended"
  ],
  "env": {
    "es6": true,
    "commonjs": true,
    "browser": true
  },
  "rules": {
    "no-warning-comments": [
      "error",
      {
        "terms": ["DEBUG", "FIXME", "HACK"],
        "location": "start"
      }
    ]
  },
  "overrides": [
    {
      "files": ["index.js", "rollup.config.js"],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
